<%
// load footer options and contacts from content
const footer = _.cms('footer') || {}
const contacts = _.cms('contacts') || {}
const themeCustom = _.settings.theme.custom || ''
%>

<div class="footer footer-new">
  <div class="footer-top">
    <div class="container">
      <div class="row">

          <div class="contato-footer">
              <span class="titulo-info">Institucional</span>
              <ul>
                <li><a href="/pages/sobre-nos">Sobre Nós</a></li>
                <li><a href="/blog">Blog</a></li>
                <li><a href="/pages/como-comprar-cbd-sem-burocracia">Prova Social</a></li>
                <li><a href="/pages/contato">Fale Conosco</a></li>
              </ul>
          </div>

          <div class="contato-footer info">
              <span class="titulo-info">Informações</span>
              <ul>
                <li><a href="/pages/faq">Troca e Devoluções</a></li>
                <li><a href="/pages/o-que-esperar-de-nossos-produtos">Garantia</a></li>
                <li><a href="#">Privacidade e Segurança</a></li>
                <li><a href="/pages/entrega">Política de Entrega</a></li>
              </ul>
          </div>

          <div class="contato-footer whatsapp-footer">
              <span class="titulo-info">Contato</span>
                <ul>
                  <li>
                    <% if (contacts.whatsapp) { %>
                      <li>
                        <span class="footer__list-icon">
                          <i class="i-whatsapp"></i>
                        </span>
                        <a
                          href="javascript:;"
                          target="_blank"
                          rel="noopener"
                          class="whatsapp-link"
                          data-tel="<%= contacts.whatsapp.replace(/\D/g, '') %>"
                        >
                          <%= contacts.whatsapp %>
                        </a>
                      </li>
                    <% } %>
                  </li>
                  <li><a href="#">Política de Entrega</a></li>
                </ul>

                  <span class="titulo-info">Visite-nos</span>
                  <ul class="visite">
                    <% if (footer.contacts.email) { %>
                      <li>
                        <a href="mailto:<%= contacts.email %>" target="_blank" rel="noopener">
                          <%= contacts.email %>
                        </a>
                      </li>
                    <% } %>
                    <% if (footer.contacts.address) { %>
                      <li>
                        <address>
                          <%= contacts.address %>
                        </address>
                      </li>
                    <% } %>
                  </ul>
          </div>

      </div>
    </div>
  </div>


  <div class="footer-bottom">
    <div class="container">
      <div class="row">

          <div class="segurança">
              <span class="titulo-info">Pagamento</span>
              <p class="footer__payment-methods">
                <% Object.keys(footer.payment_methods).forEach(method => { %>
                  <% if (footer.payment_methods[method]) { %>
                    <i class="pay-icon pay-icon--<%= method %>"></i>
                  <% } %>
                <% }) %>
              </p>
          </div>

          <div class="segurança">
              <span class="titulo-info">Segurança</span>
              <div class="footer__stamps">
                <%- await include(`@/sections/stamps`, { _, opt: { stamps: footer.stamps } }) %>
              </div>
          </div>
          
      </div>
    </div>
  </div>

  <div class="creditos-new">
        <div class="footer__credits">
        <span>
          <%= footer.credits || `© ${_.store.name} / ${contacts.address} / ${contacts.doc_number}` %>
        </span>
        <% if (themeCustom === 'ecom-beauty') { %>
          <div class="ecom-credits-container">
            <div class="ecom-credits">
              <a href="https://e-com.plus" target="_blank" rel="noopener">
                <img
                  src="https://ecom.nyc3.cdn.digitaloceanspaces.com/storefront/ecom-credits-white.png"
                  alt="E-Com Plus"
                  width="125.42"
                  height="20"
                >
              </a>
            </div>
          </div>
        <% } %>
        <button
          id="go-to-top"
          class="btn btn-primary ml-3"
          type="button"
          aria-label="<%= _.dictionary('goToTop') %>"
        >
          <i class="i-chevron-up"></i>
        </button>
      </div>
    </div> 
      <div class="ecom-credits">
        <div class="marcas-credits">
          <a href="https://e-com.plus" target="_blank" rel="noopener">
            Tecnologia by
            <img
              src="https://ecom.nyc3.digitaloceanspaces.com/brand/plus/198x43.png"
              alt="E-Com Plus"
              width="92"
              height="19.98"
            >
          </a>
        </div>
        <div class="marcas-credits">
          <a href="https://www.fwragenciadigital.com.br/" target="_blank" rel="noopener">
            Desenvolvido por
            <img src="/img/uploads/fwr.png" alt="Fwr Agência Digital">
          </a>
        </div>
      </div>
  </div>

</div>